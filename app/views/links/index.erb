<form action='/set_filter' method='post'>
  <input type='text' name='filter'>
  <input type='submit' value='Filter by tag'>
</form>

<ul id="links">
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <a href=<%=link.url%>><%= link.url %></a>
      Tags:
      <% link.tags.each do |tag| %>
        <%= tag.name %>;
      <% end %>
    </li>
  <% end %>
</ul>

<form action='/links/new'>
  <input type='submit' value='Add link'>
</form>
